<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/darkColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UnderLineEditText">
        <item name="showUnderLine">true</item>
        <item name="underLineColor">@color/yellowColor</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textColorHint">@color/grayColor</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textColor">@color/yellowColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/larger_text</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewBold" parent="TextViewDefault">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewGray" parent="TextViewBold">
        <item name="android:textColor">@color/grayColor</item>
    </style>

    <style name="TextViewBlack" parent="TextViewBold">
        <item name="android:textColor">@color/blackColor</item>
    </style>

    <style name="TextViewBlueSky" parent="TextViewBold">
        <item name="android:textColor">@color/blueFbColor</item>
    </style>

    <style name="TextVieLeftMenu" parent="TextViewGray">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextViewYellow" parent="TextViewBold">
        <item name="android:textColor">@color/yellowColor</item>
    </style>

    <style name="normal_tv">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tv_title_dialog" parent="normal_tv">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tv_content_dialog" parent="normal_tv">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="text_view_dialog_button">
        <item name="android:textColor">#1E88FE</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
