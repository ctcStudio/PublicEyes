<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkColor"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:background="@drawable/img_public_eye"
        android:scaleType="center" />

    <Button
        android:id="@+id/category_moto"
        style="@style/ButtonDefault"
        android:layout_width="@dimen/min_width_button_sign_up"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_blue_fb"
        android:text="@string/list_category_motorbike" />

    <Button
        android:id="@+id/category_oto"
        style="@style/ButtonDefault"
        android:layout_width="@dimen/min_width_button_sign_up"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_blue"
        android:text="@string/list_category_oto" />

</LinearLayout>