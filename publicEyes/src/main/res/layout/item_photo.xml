<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/add_photo_size"
    android:layout_height="@dimen/add_photo_size"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/remove"
        android:layout_width="@dimen/remove_photo_size"
        android:layout_height="@dimen/remove_photo_size"
        android:layout_gravity="right|top"
        android:layout_marginRight="@dimen/space_smaller"
        android:layout_marginTop="@dimen/space_smaller"
        android:background="@drawable/button_circle_gray"
        android:padding="@dimen/space_smaller"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_close_white" />
</merge>