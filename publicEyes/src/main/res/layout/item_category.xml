<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/item_size_category"
        android:layout_height="@dimen/item_size_category"
        android:layout_margin="@dimen/space_normal"
        android:src="@drawable/black_film" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_normal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/TextViewBold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/space_normal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Using black film/other materials"
            android:textSize="@dimen/largest_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blackColor" />
    </LinearLayout>
</LinearLayout>